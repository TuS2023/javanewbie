<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">マイページ</h4>
      <div class="d-flex align-items-center">
        <h3><b>登録情報</b></h3>
        <%= link_to "編集", customers_information_edit_path, class:"btn btn-succes ml-3" %>
      </div>
        <table>
          <tr>
            <td>氏名</td>
            <td><%= @customer.full_name %></td>

          </tr>

          <tr>
            <td>カナ</td>
            <td><%= @customer.full_name_kana %></td>

          </tr>

          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>

          </tr>

          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>

          </tr>

          <tr>
            <td>電話番号</td>
            <td><%= @customer.phone_number %></td>

          </tr>

          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>

          </tr>

        </table>
          <div class="d-flex align-items-center">
            <h3><b>配送先</b></h3>
            <%= link_to "一覧を見る", "#", class:"btn btn-primary ml-3" %>
          </div>
          <div class="d-flex align-items-center">
            <h3><b>注文履歴</b></h3>
            <%= link_to "一覧を見る", "#", class:"btn btn-primary ml-3" %>
          </div>
    </div>
  </div>
</div>